extends layout

block body
  toaster-container
  #wrapper(ng-controller='AdminUserCtrl')
    #sidebar-wrapper(ng-controller='TagCtrl')
      ul.sidebar-nav
        li.sidebar-brand
          a(href='/') #1draw-Ranking
        li.li-user(ng-if='isAuthenticated')
          a.user(href='/my')
            img.pull-right.icon(ng-src='{{user._json.profile_image_url_https}}')
            span.username @{{user.username}}
        li(ng-repeat='category in navContents.categories')
          a(href='/detail/{{category}}') #
            span.sidebar-nav_category.text-capitalize {{category}}
            span.pull-right.sidebar-arrow
              i.fa.fa-angle-right
        li
          a(href="http://1draw-ranking.tumblr.com", target="_blank") Tumblr
            span.pull-right.sidebar-ex-link
              i.fa.fa-external-link
        li
          a(href="https://github.com/eiurur/1draw-ranking", target="_blank") Github
            span.pull-right.sidebar-ex-link
              i.fa.fa-external-link
        li
          a(href='/auth/twitter/callback', target='_self', ng-hide='isAuthenticated') Login with Twitter
            span.pull-right.sidebar-ex-link
              i.fa.fa-sign-in
        li
          a(href='/logout', target='_self', ng-show='isAuthenticated') Logout
            span.pull-right.sidebar-ex-link
              i.fa.fa-sign-out
    span(ng-controller='LightboxCtrl')
      div(ng-view)
